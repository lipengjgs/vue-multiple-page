{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "config/*": [
                "./src/config/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "modules": [
                "./src/modules/*"
            ],
            "~styles/*": [
                "./src/styles/*"
            ]
        },
        "moduleResolution": "node",
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
